body {
    background: url('back.png');
    background-position: left 0px;
    background-attachment: fixed;
    background-repeat: repeat;
    background-repeat: no-repeat;
    background-color: #C0DEED;
    margin: 0px;
    font-family: arial;
    color: #444;
    overflow-y: hidden;
}

#center {
    width: 850px;
    background: url('whitewash.png');
    margin: 0px auto;
    height: 900px;
}

#titleWrap {
    text-align: center;
    font-size: 80px;
    padding-top: 150px;
    color: #222;
}

#subtitleWrap {
    text-align: center;
    font-size: 14px;
}

#bioWrap {
    width: 600px;
    height: 100px;
    border: 1px solid rgba(0, 0, 0, .3);
    border-radius: 5px;
    background-color: white;
    margin: 0px auto;
    margin-top: 50px;
    padding: 13px;
}

#bioWrap > div {
    float: left;
}

#biopicture  {
    display: inline-block;
    margin-right: 13px;
}

#biopicture img {
    height: 100px;
    border-radius: 5px;
}

#bio {
    display: inline-block;
    width: 475px;
    color: #555;
    font-size: 14px;
}

#name {
    font-weight: bold;
    font-size: 30px;
    margin-bottom: 2px;
    color: #333;
}

#buttonsWrap {
    text-align: center;
    margin-top: 25px;
}

#generateButton {
    border: 1px solid #CCC;
    border-radius: 5px;
    background-color: #DDD;
    background-repeat: repeat-x;
    background-image: -khtml-gradient(linear,left top,left bottom,from(white),to(#DDD));
    background-image: -moz-linear-gradient(white,#DDD);
    background-image: -ms-linear-gradient(white,#DDD);
    background-image: -webkit-gradient(linear,left top,left bottom,color-stop(0%,white),color-stop(100%,#DDD));
    background-image: -webkit-linear-gradient(white,#DDD);
    background-image: -o-linear-gradient(white,#DDD);
    background-image: linear-gradient(white,#DDD);
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ffffff',endColorstr='#dddddd');
    font-size: 24px;
    font-weight: bold;
    color: #444444;
    padding: 8px 17px;
}

#generateButton:hover {
    background: #e6e6e6; /* Old browsers */
    background: -moz-linear-gradient(top, #e6e6e6 0%, #c3c3c3 100%); /* FF3.6+ */
    background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#e6e6e6), color-stop(100%,#c3c3c3)); /* Chrome,Safari4+ */
    background: -webkit-linear-gradient(top, #e6e6e6 0%,#c3c3c3 100%); /* Chrome10+,Safari5.1+ */
    background: -o-linear-gradient(top, #e6e6e6 0%,#c3c3c3 100%); /* Opera 11.10+ */
    background: -ms-linear-gradient(top, #e6e6e6 0%,#c3c3c3 100%); /* IE10+ */
    background: linear-gradient(top, #e6e6e6 0%,#c3c3c3 100%); /* W3C */
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#e6e6e6', endColorstr='#c3c3c3',GradientType=0 ); /* IE6-9 */
    cursor: pointer;
}

#info {
    width: 850px;
    text-align: center;
    position: absolute;
    bottom: 10px;
    font-size: 12px;
}

#socialWrap {
    margin-top: 10px;
}

